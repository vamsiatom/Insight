<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saimo.appcontent.MainActivity"
    android:background="@drawable/staff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:id="@+id/btsprofile"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/btsgoals" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EBOOKS"
        android:id="@+id/btsebook"
        android:layout_below="@+id/btsprofile"
        android:layout_alignStart="@+id/btsprofile" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLLEGE"
        android:id="@+id/btsabtclg"
        android:layout_below="@+id/btsebook"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPARTMENT"
        android:id="@+id/btsdept"
        android:layout_below="@+id/btsgoals"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE PASSWORD"
        android:id="@+id/btscpwd"
        android:layout_below="@+id/btsclist"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUSELLING STUDENTS LIST"
        android:id="@+id/btsclist"
        android:layout_below="@+id/btsabtclg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAFF"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/btslogout"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btsabtclg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btsgoals"
        android:layout_below="@+id/btscpwd"
        android:layout_centerHorizontal="true"
        android:text="GOALS" />

</RelativeLayout>
