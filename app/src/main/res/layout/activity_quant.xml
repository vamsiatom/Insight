<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saimo.insight.QUANT"
    android:background="@drawable/quant">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORMULAE"
        android:id="@+id/button83"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROBLEMS"
        android:id="@+id/button84"
        android:layout_below="@+id/button83"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQS"
        android:id="@+id/button85"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button84" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VEDIC MATHS"
        android:id="@+id/button86"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/button85"
        android:layout_alignEnd="@+id/button85" />
</RelativeLayout>
